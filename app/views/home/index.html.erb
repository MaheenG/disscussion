<div class="row">
  <!-- Main Content -->
  <div class="col-lg-8">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div class="d-flex align-items-center">
        <h1 class="h3 mb-0 me-3">
          <i class="fas fa-comments text-primary me-2"></i>
          Recent Discussions
        </h1>
        <%= link_to 'View All Channels', channels_path, class: 'btn btn-outline-secondary btn-sm' %>
      </div>

      <% if user_signed_in? %>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            <i class="fas fa-plus me-1"></i> New Discussion
          </button>
          <ul class="dropdown-menu">
            <% @channels.each do |channel| %>
              <li>
                <%= link_to new_channel_discussion_path(channel), class: "dropdown-item" do %>
                  <span class="badge me-2" style="background-color: <%= channel.color %>;">&nbsp;</span>
                  <%= channel.name %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <% if @recent_discussions.any? %>
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <% @recent_discussions.each_with_index do |discussion, index| %>
            <div class="discussion-item p-4 <%= 'border-bottom' unless index == @recent_discussions.length - 1 %>">
              <div class="d-flex">
                <div class="flex-shrink-0 me-3">
                  <%= user_avatar(discussion.user, size: 'md') %>
                </div>
                <div class="flex-grow-1">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                      <h5 class="mb-1">
                        <%= link_to discussion.title, channel_discussion_path(discussion.channel, discussion), 
                            class: "text-decoration-none text-dark fw-bold" %>
                        <% if discussion.pinned? %>
                          <i class="fas fa-thumbtack text-warning ms-1" title="Pinned"></i>
                        <% end %>
                      </h5>
                      <div class="d-flex align-items-center text-muted small">
                        <span class="badge me-2" style="background-color: <%= discussion.channel.color %>;">
                          <%= discussion.channel.name %>
                        </span>
                        by <%= discussion.user.display_name %>
                        <span class="mx-2">â€¢</span>
                        <%= time_ago_in_words_or_date(discussion.created_at) %>
                      </div>
                    </div>
                    <div class="text-end text-muted small">
                      <div><i class="fas fa-reply me-1"></i> <%= discussion.replies_count %></div>
                    </div>
                  </div>
                  <p class="text-muted mb-0"><%= discussion.excerpt %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-comments fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No discussions yet</h3>
        <p class="text-muted">Be the first to start a conversation!</p>
        <% if user_signed_in? && @channels.any? %>
          <%= link_to "Start Discussion", new_channel_discussion_path(@channels.first), class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Sidebar -->
  <div class="col-lg-4">
    <%= render 'shared/sidebar' %>
  </div>
</div>
