var replyElement = document.querySelector('#reply-<%= @reply.id %>');
replyElement.outerHTML = '<%= j render @reply %>';

var notification = document.getElementById('notification');
notification.innerHTML = '<%= j render "shared/notification", message: "Reply updated successfully", type: "success" %>';
notification.classList.remove('hidden');

var closeButton = notification.querySelector('.close');
closeButton.addEventListener('click', function() {
    notification.classList.add('hidden');
});

setTimeout(function() {
    notification.classList.add('hidden');
}, 3000); 