<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">
    <i class="fas fa-comments text-primary me-2"></i>
    All Discussions
  </h1>
</div>

<div class="mb-4">
  <% if user_signed_in? && @channels.any? %>
    <div class="dropdown">
      <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <i class="fas fa-plus me-1"></i> New Discussion
      </button>
      <ul class="dropdown-menu">
        <% @channels.each do |channel| %>
          <li>
            <%= link_to new_channel_discussion_path(channel), class: "dropdown-item" do %>
              <span class="badge me-2" style="background-color: <%= channel.color %>;">&nbsp;</span>
              <%= channel.name %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<% if @discussions.any? %>
  <div class="card shadow-sm">
    <div class="card-body p-0">
      <% @discussions.each_with_index do |discussion, index| %>
        <div class="discussion-item p-4 <%= 'border-bottom' unless index == @discussions.count - 1 %>">
          <div class="d-flex">
            <div class="flex-shrink-0 me-3">
              <%= user_avatar(discussion.user, size: 'md') %>
            </div>
            <div class="flex-grow-1">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <div>
                  <h5 class="mb-1">
                    <%= link_to discussion.title, channel_discussion_path(discussion.channel, discussion), 
                        class: "text-decoration-none text-dark fw-bold" %>
                    <% if discussion.pinned? %>
                      <i class="fas fa-thumbtack text-warning ms-1" title="Pinned"></i>
                    <% end %>
                  </h5>
                  <div class="d-flex align-items-center text-muted small">
                    <span class="badge me-2" style="background-color: <%= discussion.channel.color %>;">
                      <%= discussion.channel.name %>
                    </span>
                    by <%= discussion.user.display_name %>
                    <span class="mx-2">â€¢</span>
                    <%= time_ago_in_words_or_date(discussion.created_at) %>
                  </div>
                </div>
                <div class="text-end text-muted small">
                  <div><i class="fas fa-reply me-1"></i> <%= discussion.replies_count %></div>
                </div>
              </div>
              <p class="text-muted mb-0"><%= discussion.excerpt %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @discussions %>
  </div>
<% else %>
  <div class="text-center py-5">
    <i class="fas fa-comments fa-3x text-muted mb-3"></i>
    <h3 class="text-muted">No discussions found</h3>
  </div>
<% end %>
