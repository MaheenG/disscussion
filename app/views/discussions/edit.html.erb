<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-header bg-white">
        <h4 class="mb-0">
          <i class="fas fa-edit me-2"></i>
          Edit Discussion
        </h4>
      </div>
      <div class="card-body">
        <%= form_with model: [@channel, @discussion], local: true do |form| %>
          <% if @discussion.errors.any? %>
            <div class="alert alert-danger">
              <h6>Please fix the following errors:</h6>
              <ul class="mb-0">
                <% @discussion.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title, class: "form-control", placeholder: "Enter discussion title" %>
          </div>

          <div class="mb-3">
            <%= form.label :content, class: "form-label" %>
            <%= form.text_area :content, class: "form-control", rows: 6, placeholder: "Write your content here..." %>
          </div>

          <div class="d-flex justify-content-end">
            <%= form.submit "Update Discussion", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
