<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-2">
      <span class="badge me-2" style="background-color: <%= @channel.color %>; font-size: 1rem;">&nbsp;</span>
      <%= @channel.name %>
    </h1>
    <p class="text-muted mb-0"><%= @channel.description %></p>
  </div>
  <% if user_signed_in? %>
    <%= link_to new_channel_discussion_path(@channel), class: "btn btn-primary" do %>
      <i class="fas fa-plus me-1"></i> New Discussion
    <% end %>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-12">
    <% if @discussions.any? %>
      <div class="card shadow-sm">
        <div class="card-body p-0">
          <% @discussions.each_with_index do |discussion, index| %>
            <div class="discussion-item p-4 <%= 'border-bottom' unless index == @discussions.count - 1 %>">
              <div class="d-flex">
                <div class="flex-shrink-0 me-3">
                  <%= user_avatar(discussion.user, size: 'md') %>
                </div>
                <div class="flex-grow-1">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                      <h5 class="mb-1">
                        <%= link_to discussion.title, channel_discussion_path(@channel, discussion), 
                            class: "text-decoration-none text-dark fw-bold" %>
                        <% if discussion.pinned? %>
                          <i class="fas fa-thumbtack text-warning ms-1" title="Pinned"></i>
                        <% end %>
                      </h5>
                      <div class="text-muted small">
                        by <%= discussion.user.display_name %>
                        <span class="mx-2">â€¢</span>
                        <%= time_ago_in_words_or_date(discussion.created_at) %>
                      </div>
                    </div>
                    <div class="text-end">
                      <div class="text-muted small mb-1">
                        <i class="fas fa-reply me-1"></i> <%= discussion.replies_count %> replies
                      </div>
                      <% if discussion.latest_reply %>
                        <div class="text-muted small">
                          Last: <%= time_ago_in_words_or_date(discussion.latest_reply.created_at) %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                  <p class="text-muted mb-0"><%= discussion.excerpt %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <%= paginate @discussions %>
      </div>
    <% else %>
      <div class="text-center py-5">
        <i class="fas fa-comments fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No discussions in this channel yet</h3>
        <p class="text-muted">Be the first to start a conversation!</p>
        <% if user_signed_in? %>
          <%= link_to "Start Discussion", new_channel_discussion_path(@channel), class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>